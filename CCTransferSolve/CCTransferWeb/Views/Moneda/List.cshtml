        @*var ListaAux=from moneda in Model
            where Moneda.Nombre != monedaorigen.selecionada
            select Moneda).ToList();*@
    }
</select>

<table class="table">
    <thead>
        <tr>
            <th>
                <label>Id de la moneda</label>
            </th>
            <th>
                <label>Codigo de la moneda</label>
            </th>
            <th>
                <label>Nombre de la moneda</label>
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var Moneda in Model)
        {
            <tr>
                <td>
                    @Moneda.Id
                </td>
                <td>
                    @Moneda.NomMoneda
                </td>
                <td>
                    @Moneda.CodMoneda
                </td>
            </tr>
        }
    </tbody>
</table>


