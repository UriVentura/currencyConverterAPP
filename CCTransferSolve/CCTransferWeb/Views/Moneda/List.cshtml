@{
    ViewData["Title"] = "Lista";
}

<h1>Lista</h1>



<select id="MonedaOrigen" runat="server">
    @foreach (var Moneda in Model)
    {
        <option value="@Moneda.NomMoneda">@Moneda.NomMoneda</option>
    }
</select>


<select id="MonedaDestino" runat="server">
    @foreach (var Moneda in Model)
    {
        <option value="@Moneda.NomMoneda">@Moneda.NomMoneda</option>
        //Restirngir valor de la selleción anterior
        @*var monedasDestino = (from Moneda in Model
            where moneda.Nombre != monedaorigen.selecionada
